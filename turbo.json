{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "pipe": {
      "dependsOn": ["build", "lint", "test"]
    },
    "start:dev": {
      "dependsOn": ["^start:dev"],
      "cache": false
    }
  }
}
